{
  "semi": false,
  "trailingComma": "none",
  "singleQuote": false,
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "htmlWhitespaceSensitivity": "css",
  "embeddedLanguageFormatting": "auto",
  "plugins": ["@shopify/prettier-plugin-liquid"],
  "overrides": [
    {
      "files": "**/*.html",
      "options": {
        "parser": "liquid-html",
        "printWidth": 80,
        "embeddedSingleQuote": false
      }
    }
  ]
}
